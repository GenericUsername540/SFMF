<Window x:Class="SFMFLauncher.ModDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFMFLauncher"
        mc:Ignorable="d"
        Title="Mod Details" MaxHeight="500" Width="400" SizeToContent="Height">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top">
            <Label Content="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#FF333333" />
            <Label Content="{Binding Version}" FontSize="14" Foreground="#FF7E7E7E" />
            <TextBlock Text="{Binding Description}" FontSize="14" Margin="5" TextWrapping="Wrap" Foreground="#FF333333" />
            <Label x:Name="lblWarning" Content="Warning: This mod disables high score reporting." FontSize="14" FontWeight="Bold" Foreground="#FF810000" />
        </StackPanel>
    </Grid>
</Window>
    